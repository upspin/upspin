# mp is the mount point for the upspin root.
mp=$HOME/ufs

# Unmount any previous mount.
umount $mp 2>/dev/null

# Creat the mount point if it doesn't already exist.
mkdir $mp 2>/dev/null

# Start the service. Use any flags passed to us.
upspinfs $@ -mount $mp
